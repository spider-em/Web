    if (s) 
      {
      s++;
      fname = (char *) malloc(sizeof(char) * (strlen(s) + 1));
      strcpy(fname,s);
      fname = strtok(fname,".");

      /* The 7th parameter is set to -1 to use the current 
          foreground color */
      witext(icontx, fname, ixul, iyul+nrowi+names_height,
                 1, 0, -1, 2, FALSE);
      free( fname );
      }
   }
