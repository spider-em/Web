 extern void     actions    (Widget, char *, void (*)(), char *);
 extern void     getloc     (XEvent *, char, int *, int *);
 extern void     barmen     (Widget, caddr_t, caddr_t);
d54 4
a57 5
 /* external common variables */
 extern Widget iw_barmen;
 extern int    idx, idy;
 static GC     icontxx;

d63 1
