#include "common.h"

 /************************   pixlen  ******************************/

 int pixlen( GC gc, char * strg )
 {
  GContext      theId;

  theId = XGContextFromGC( gc );
  return XTextWidth( XQueryFont(idispl, theId), strg, strlen(strg) );

 }
