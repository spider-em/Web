#include "std.h"

 extern int numdig(int, int);

 /************************* itoa *******************************/

 char * itoa(int ivalue)

 {
 int leni;
 char * cval;

 leni = numdig(ivalue,1) ;

 if ((cval = (char *) malloc((leni + 1) * sizeof(char))) == 
     (char *) NULL)  return (char *) 0;

 sprintf(cval,"%*d",leni,ivalue);
 return cval; 
 }  
